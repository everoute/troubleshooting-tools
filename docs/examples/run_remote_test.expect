#!/usr/bin/expect -f
#
# Run Remote Test Script
# Usage: ./run_remote_test.expect <jump_password> <file_jump_password> [test_script]
#

# Configuration
set jump_host "jump.smartx.com"
set jump_port "2222"
set jump_user "chengcheng.luo"
set target_host "19.95"
set file_jump_host "192.168.17.20"
set file_jump_user "root"
set file_jump_dir "/root/lcc"
set target_workdir "/home/smartx/lcc"

# Parse arguments
if {$argc < 2} {
    puts "Usage: $argv0 <jump_password> <file_jump_password> \[test_script\]"
    puts ""
    puts "Arguments:"
    puts "  jump_password       - Password for jumpserver"
    puts "  file_jump_password  - Password for file transfer host"
    puts "  test_script         - Script to run (default: test_script.sh)"
    exit 1
}

set jump_password [lindex $argv 0]
set file_jump_password [lindex $argv 1]
set test_script [lindex $argv 2]
if {$test_script == ""} {
    set test_script "test_script.sh"
}

set timeout 120
log_user 1

puts "========================================================================"
puts "Remote Test Execution"
puts "========================================================================"
puts "Target: ${target_host}"
puts "Script: ${test_script}"
puts "========================================================================"
puts ""

# Login to jump server
spawn ssh ${jump_user}@${jump_host} -p ${jump_port}
expect "password:"
send "${jump_password}\r"

# Select target machine
expect "Opt>"
send "${target_host}\r"

# Wait for successful login
expect -re ".*smartx@.*"
sleep 2

# Change to working directory
send "cd ${target_workdir}\r"
expect -re ".*smartx@.*"

# Download test script from file transfer host
puts "\n=== Downloading test script from file transfer host ==="
send "scp ${file_jump_user}@${file_jump_host}:${file_jump_dir}/${test_script} ./\r"
expect {
    "yes/no" {
        send "yes\r"
        exp_continue
    }
    "password:" {
        send "${file_jump_password}\r"
    }
    timeout {
        puts "ERROR: Timeout during scp"
        exit 1
    }
}
expect -re ".*smartx@.*"

# Make executable
send "chmod +x ${test_script}\r"
expect -re ".*smartx@.*"

# Run the test
puts "\n=== Running test script ==="
send "bash ${test_script} 2>&1 | tee /tmp/test_output.txt\r"

expect {
    -re ".*smartx@.*" {
        puts "\n=== Test completed ==="
    }
    timeout {
        puts "\n=== Test timeout (may be normal for long-running tests) ==="
        send "\003"
    }
}

sleep 2

# Upload results back to file transfer host
puts "\n=== Uploading results ==="
send "scp /tmp/test_output.txt ${file_jump_user}@${file_jump_host}:${file_jump_dir}/test_results_\[exec date +%Y%m%d_%H%M%S\].txt\r"
expect "password:"
send "${file_jump_password}\r"
expect -re ".*smartx@.*"

puts "\n=== Results uploaded to ${file_jump_host}:${file_jump_dir}/ ==="

# Cleanup and exit
send "exit\r"
expect eof

puts "\n========================================================================"
puts "Test execution complete"
puts "========================================================================"
